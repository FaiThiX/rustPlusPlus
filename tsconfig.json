{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "exclude": [
    "index.ts"
  ],
  "include": [
    "src/structures/LocaleManager.ts",
    "src/util/constants.ts",
    "src/util/credentials.ts",
    "src/util/guild-instance.ts",
    "src/util/keywords.ts",
    "src/util/languages.ts"
  ]
}